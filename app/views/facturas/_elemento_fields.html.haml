.nested-fields
  .field.col-sm-2
    = f.text_field :cantidad, class: 'form-control input-sm', placeholder: '20.00'
  .field.col-sm-6
    = f.text_field :descripcion, class: 'form-control input-sm', placeholder: 'descripcion'
  .field.col-sm-1
    = f.text_field :precio_unitario, class: 'form-control input-sm', placeholder: 'PrecioU'
  .field.col-sm-2
    = f.text_field :precio_venta, class: 'form-control input-sm', placeholder: 'Precio Venta'
  .field.col-sm-1
    = link_to_remove_association '<span class="glyphicon glyphicon-trash"></span>'.html_safe , f, class: 'btn btn-danger btn-sm'
  %br
