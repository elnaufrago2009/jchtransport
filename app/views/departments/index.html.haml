#region-departments
	.region
		.page-header
			%h1= page_title!('Departamentos')
		.region
			.admin-control
				= link_to '<span class="glyphicon glyphicon-plus"></span> Crear'.html_safe, new_department_path, class: 'btn btn-primary btn-lg'		
			%br	
			.row
				.col-sm-8
					.table-responsive
						%table.table.table-condensed
							%tr
								%th #id
								%th Nombre
								%th Acciones							

							- @departments.each do |department|
								%tr
									%td= department.id
									%td= department.nombre
									%td
										= link_to '<span class="glyphicon glyphicon-eye-open"></span> Ver'.html_safe, department, class: 'btn btn-info btn-sm'			
										= link_to '<span class="glyphicon glyphicon-edit"></span> Editar'.html_safe, edit_department_path(department), class: 'btn btn-success btn-sm'
										= link_to '<span class="glyphicon glyphicon-trash"></span> Eliminar'.html_safe, department, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger btn-sm'
