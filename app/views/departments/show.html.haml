#region-departments.container
  .region
    .page-header
      %h1= page_title!('Departamento')

  .region
    %p
      %b Nombre:
      = @department.nombre

  .region    
    .admin-controls
      = link_to '<span class="glyphicon glyphicon-edit"></span> Editar'.html_safe, edit_department_path(@department), class: 'btn btn-success btn-sm'
      = link_to '<span class="glyphicon glyphicon-arrow-left"></span> Regresar'.html_safe, departments_path, class: 'btn btn-warning btn-sm'
