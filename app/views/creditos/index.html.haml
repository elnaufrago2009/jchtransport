#region-creditos.container

  .region
    .page-header
      %h1= page_title!('Creditos')

    .region      
      .admin-control
        = link_to 'Crear Credito', new_credito_path, class: 'btn btn-primary'
      %br
      .table-responsive
        %table.table
          %tr
            %th Nombre
            %th
            %th
            %th

          - @creditos.each do |credito|
            %tr
              %td= credito.nombre
              %td
                = link_to 'Ver', credito, class: 'btn btn-info btn-sm'              
                = link_to 'Editar', edit_credito_path(credito), class: 'btn btn-success btn-sm'
                = link_to 'Eliminar', credito, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger btn-sm'
