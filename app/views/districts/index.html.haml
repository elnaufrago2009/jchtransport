#region-districts

  .region
    .page-header
      %h1= page_title!('Distritos')

    .region      
      .admin-control
        = link_to '<span class="glyphicon glyphicon-plus"></span> Crear'.html_safe, new_district_path, class: 'btn btn-primary btn-lg'
      %br
      .row
        .col-sm-8
          .table-responsive
            %table.table.table-condensed
              %tr
                %th #id
                %th Provincia
                %th Nombre
                %th Acciones                 

              - @districts.each do |district|
                %tr
                  %td= district.id
                  %td= district.province.nombre
                  %td= district.nombre
                  %td
                    = link_to '<span class="glyphicon glyphicon-eye-open"></span> Ver'.html_safe, district, class: 'btn btn-info btn-sm'
                    = link_to '<span class="glyphicon glyphicon-edit"></span>Editar'.html_safe, edit_district_path(district), class: 'btn btn-success btn-sm'
                    = link_to '<span class="glyphicon glyphicon-trash"></span>Eliminar'.html_safe, district, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger btn-sm'
