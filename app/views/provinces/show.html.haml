#region-provinces
  .region
    .page-header
      %h1= page_title!('Provincia')

  .region
    %p
      %b Departamento:
      = @province.department.nombre
    %p
      %b Nombre:
      = @province.nombre

  .region    
    .admin-controls
      = link_to '<span class="glyphicon glyphicon-edit"></span> Editar'.html_safe, edit_province_path(@province), class: 'btn btn-success btn-sm'
      = link_to '<span class="glyphicon glyphicon-arrow-left"></span> Regresar'.html_safe, provinces_path, class: 'btn btn-warning btn-sm'
