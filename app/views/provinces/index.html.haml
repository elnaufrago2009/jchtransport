#region-provinces

  .region
    .page-header
      %h1= page_title!('Provincias')

    .region      
      .admin-control
        = link_to '<span class="glyphicon glyphicon-plus"></span> Crear Province'.html_safe, new_province_path, class: 'btn btn-primary btn-sm'
      %br
      .row
        .col-sm-8
          .table-responsive
            %table.table.table-condensed
              %tr
                %th #id
                %th Departamento
                %th Nombre
                %th Acciones           

              - @provinces.each do |province|
                %tr
                  %td= province.id
                  %td= province.department.nombre
                  %td= province.nombre
                  %td
                    = link_to '<span class="glyphicon glyphicon-eye-open"></span> Ver'.html_safe, province, class: 'btn btn-info btn-sm'              
                    = link_to '<span class="glyphicon glyphicon-edit"></span> Editar'.html_safe, edit_province_path(province), class: 'btn btn-success btn-sm'
                    = link_to '<span class="glyphicon glyphicon-trash"></span> Eliminar'.html_safe, province, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger btn-sm'
