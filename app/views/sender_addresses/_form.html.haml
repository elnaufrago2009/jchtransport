= form_for @sender_address, :html => { class: 'form-horizontal', role: 'form' } do |f|
  - if @sender_address.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sender_address.errors.count, "error")}"
      %ul
        - @sender_address.errors.full_messages.each do |msg|
          %li= msg


  .form-group
    = f.label :sender_id, class: 'col-sm-2 control-label'
    .col-sm-4
      = f.select :sender_id, Sender.all.collect{|x| [x.name_reason, x.id]}, {}, class: 'form-control'
  .form-group
    = f.label :direccion, class: 'col-sm-2 control-label'
    .col-sm-4
      = f.text_field :direccion, class: 'form-control'
  
  .form-group
    .col-sm-2
    .col-sm-4
      = f.submit 'Guardar', class: 'btn btn-default'
