#region-backs.container
  .region
    .page-header
      %h1= page_title!('Placas Traseras')

  .region
    %p
      %b Nombre:
      = @back.nombre
    %p
      %b Descripcion:
      = @back.descripcion

  .region
    .admin-controls
      = link_to '<span class="glyphicon glyphicon-edit"></span> Editar'.html_safe, edit_back_path(@back), class: 'btn btn-success btn-sm'
      = link_to '<span class="glyphicon glyphicon-arrow-left"></span> Regresar'.html_safe, backs_path, class: 'btn btn-warning btn-sm'
