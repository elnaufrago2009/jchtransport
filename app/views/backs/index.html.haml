#region-backs

  .region
    .page-header
      %h1= page_title!('Placas Traseras')

    .region      
      .admin-control
        = link_to '<span class="glyphicon glyphicon-plus"></span> Crear'.html_safe, new_back_path, class: 'btn btn-primary btn-lg'
      %br      
      .row
        .col-sm-8
          .table-responsive
            %table.table
              %tr
                %th Nombre
                %th Descripcion
                %th
                %th
                %th

              - @backs.each do |back|
                %tr
                  %td= back.nombre
                  %td= back.descripcion
                  %td
                    = link_to '<span class="glyphicon glyphicon-eye-open"></span> Ver'.html_safe, back, class: 'btn btn-info btn-sm'                  
                    = link_to '<span class="glyphicon glyphicon-edit"></span> Editar'.html_safe, edit_back_path(back), class: 'btn btn-success btn-sm'
                    = link_to '<span class="glyphicon glyphicon-trash"></span> Eliminar'.html_safe, back, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger btn-sm'
