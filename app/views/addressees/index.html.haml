#region-addressees

  .region
    .page-header
      %h1= page_title!('Destinatarios')

    .region
      - if current_admin
        .admin-control
          = link_to '<span class="glyphicon glyphicon-plus"></span> Crear'.html_safe, new_addressee_path, class: 'btn btn-primary btn-lg'
    %br
    %br
    .row
      .table-responsive.col-sm-9
        %table.table
          %tr
            %th Name reason
            %th Ruc
            %th Identity document
            %th Acciones       
            

          - @addressees.each do |addressee|
            %tr
              %td= addressee.name_reason
              %td= addressee.ruc
              %td= addressee.identity_document
              %td
                = link_to '<span class="glyphicon glyphicon-eye-open"></span> Ver'.html_safe, addressee, class: 'btn btn-info'              
                = link_to '<span class="glyphicon glyphicon-edit"></span> Editar'.html_safe, edit_addressee_path(addressee), class: 'btn btn-success'
                = link_to '<span class="glyphicon glyphicon-trash"></span> Eliminar'.html_safe, addressee, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
