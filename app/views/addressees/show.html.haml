#region-addressees.container
  .region
    .page-header
      %h1= page_title!('Destinatarios')

  .region
    %p
      %b Nombre / Razon:
      = @addressee.name_reason
    %p
      %b Ruc:
      = @addressee.ruc
    %p
      %b Documento de Idenetidad DNI:
      = @addressee.identity_document

  .region   
    = link_to '<span class="glyphicon glyphicon-edit"></span> Editar'.html_safe, edit_addressee_path(@addressee), class: 'btn btn-success'
    = link_to '<span class="glyphicon glyphicon-arrow-left"></span> Regresar'.html_safe, addressees_path, class: 'btn btn-warning'
