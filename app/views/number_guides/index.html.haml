#region-number_guides

  .region
    .page-header
      %h1= page_title!('Numero de Guia')

    .region
      - if current_admin
        .admin-control
          = link_to '<span class="glyphicon glyphicon-plus"></span> Crear'.html_safe, new_number_guide_path, class: 'btn btn-primary btn-lg'
    %br
    %br
    .row
      .table-responsive.col-sm-5
        %table.table
          %tr
            %th Numero
            %th Acciones
            
            

          - @number_guides.each do |number_guide|
            %tr
              %td= number_guide.numero
              %td
                = link_to '<span class="glyphicon glyphicon-eye-open"></span> Ver'.html_safe, number_guide, class: 'btn btn-info'             
                = link_to '<span class="glyphicon glyphicon-edit"></span> Editar'.html_safe, edit_number_guide_path(number_guide), class: 'btn btn-success'
                
