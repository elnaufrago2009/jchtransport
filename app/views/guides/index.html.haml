#region-guides

  .region
    .page-header
      %h1= page_title!('Guias de Remision - Transportista')

    .region      
      .admin-control
        = link_to '<span class="glyphicon glyphicon-plus"></span> Crear Guia'.html_safe, new_guide_path, class: 'btn btn-primary'
      %br
      .row
        .col-sm-12
        .table-responsive
          %table.table
            %tr
              %th Numero remision guia
              %th Fecha emision
              %th Fecha inicio traslado            
              %th Acciones

            - @guides.each do |guide|
              %tr
                %td= guide.numero_remision_guia
                %td= guide.fecha_emision
                %td= guide.fecha_inicio_traslado
                %td
                  = link_to '<span class="glyphicon glyphicon-eye-open"></span> Ver'.html_safe, guide, class: 'btn btn-info btn-sm'              
                  = link_to '<span class="glyphicon glyphicon-edit"></span> Editar'.html_safe, edit_guide_path(guide), class: 'btn btn-success btn-sm'
                  = link_to '<span class="glyphicon glyphicon-trash"></span> Eliminar'.html_safe, guide, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger btn-sm'
