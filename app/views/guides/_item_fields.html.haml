.nested-fields
    .field.col-sm-2
        .form-group
            = f.text_field :codigo, class: 'form-control input-lg', placeholder: 'codigo'
    .field.col-sm-4
        .form-group
            = f.text_field :descripcion, class: 'form-control input-lg', placeholder: 'descripcion'
    .field.col-sm-1
        .form-group
            = f.text_field :cantidad, class: 'form-control input-lg', placeholder: 'cant'
    .field.col-sm-1
        .form-group
            = f.select :measure_id, Measure.all.collect{|x| [x.nombre, x.id]}, {:include_blank => 'Medida'}, class: 'form-control input-lg'
    .field.col-sm-1
        .form-group
            = f.text_field :peso, class: 'form-control input-lg', placeholder: 'Pes'
    .field.col-sm-1        
        .form-group
            = f.select :unit_id, Unit.all.collect{|x| [x.und, x.id]}, {:include_blank => 'Und'}, class: 'form-control input-lg'
    .field.col-sm-1
        .form-group
            = f.text_field :precio_total, class: 'form-control input-lg', placeholder: 'prec'
    .field.col-sm-1                    
        = link_to_remove_association '<span class="glyphicon glyphicon-trash"></span>'.html_safe , f, class: 'btn btn-danger btn-lg'

