.form-group.nested-fields
    .col-sm-2        
        = f.text_field :codigo, class: 'form-control input-lg', placeholder: ''
    .col-sm-3        
        = f.text_field :descripcion, class: 'form-control input-lg', placeholder: ''
    .col-sm-2        
        = f.text_field :cantidad, class: 'form-control input-lg', placeholder: ''
    .col-sm-1        
        = f.select :measure_id, Measure.all.collect{|x| [x.nombre, x.id]}, {:include_blank => 'Medida'}, class: 'form-control input-lg'
    .col-sm-2
        = f.text_field :peso, class: 'form-control input-lg', placeholder: ''
    .col-sm-1
        = f.select :unit_id, Unit.all.collect{|x| [x.und, x.id]}, {:include_blank => 'Und'}, class: 'form-control input-lg'    
    .col-sm-1                    
        = link_to_remove_association '<span class="glyphicon glyphicon-trash"></span>'.html_safe , f, class: 'btn btn-danger btn-lg'

