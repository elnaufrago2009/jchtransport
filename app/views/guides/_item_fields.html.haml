.nested-fields
    .field.col-sm-2
        = f.text_field :codigo, class: 'form-control input-sm', placeholder: '00748'
    .field.col-sm-4
        = f.text_field :descripcion, class: 'form-control input-sm', placeholder: 'Tora de Soya marca granos'
    .field.col-sm-1
        = f.text_field :cantidad, class: 'form-control input-sm', placeholder: '600.00'
    .field.col-sm-1
        = f.select :measure_id, Measure.all.collect{|x| [x.nombre, x.id]}, {:include_blank => 'Medida'}, class: 'form-control input-sm'
    .field.col-sm-1
        = f.text_field :peso, class: 'form-control input-sm', placeholder: '3.00'
    .field.col-sm-1        
        = f.select :unit_id, Unit.all.collect{|x| [x.und, x.id]}, {:include_blank => 'Unidad'}, class: 'form-control input-sm'
    .field.col-sm-1
        = f.text_field :precio_total, class: 'form-control input-sm', placeholder: '250.00'
    .field.col-sm-1                    
        = link_to_remove_association '<span class="glyphicon glyphicon-trash"></span>'.html_safe , f, class: 'btn btn-danger btn-sm'
    %br
    %br
