#region-number_invoices

  .region
    .page-header
      %h1= page_title!('Numero de Factura')

    .region
      - if current_admin
        .admin-control
          = link_to '<span class="glyphicon glyphicon-plus"></span> Crear'.html_safe, new_number_invoice_path, class: 'btn btn-primary btn-lg'
    %br
    %br
    .row
      .table-responsive.col-sm-5
        %table.table
          %tr
            %th Number           
            %th Acciones

          - @number_invoices.each do |number_invoice|
            %tr
              %td= number_invoice.number
              %td
                = link_to 'Ver', number_invoice, class: 'btn btn-info'
                = link_to 'Editar', edit_number_invoice_path(number_invoice), class: 'btn btn-success'
                
