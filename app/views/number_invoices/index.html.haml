#region-number_invoices.container

  .region
    .region-title
      %h1= page_title!('number_invoices')

    .region
      - if current_admin
        .admin-control
          = link_to 'Crear Number invoice', new_number_invoice_path, class: 'btn btn-primary'

      .table-responsive
        %table.table
          %tr
            %th Number
            %th
            %th
            %th

          - @number_invoices.each do |number_invoice|
            %tr
              %td= number_invoice.number
              %td= link_to 'Ver', number_invoice, class: 'btn btn-info'
              - if current_admin
                %td= link_to 'Editar', edit_number_invoice_path(number_invoice), class: 'btn btn-success'
                %td= link_to 'Eliminar', number_invoice, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
