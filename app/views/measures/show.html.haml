#region-measures.container
  .region
    .page-header
      %h1= page_title!('Unidad de Medidad Ver')

  .region
    %p
      %b Nombre:
      = @measure.nombre
    %p
      %b Und:
      = @measure.und

  .region    
    = link_to '<span class="glyphicon glyphicon-edit"></span> Editar'.html_safe, edit_measure_path(@measure), class: 'btn btn-success'
