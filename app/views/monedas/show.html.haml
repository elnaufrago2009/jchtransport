#region-monedas.container
  .region
    .page-header
      %h1= page_title!('Moneda Ver')

  .region
    %p
      %b Nombre:
      = @moneda.nombre
    %p
      %b Simbolo:
      = @moneda.simbolo

  .region    
    = link_to '<span class="glyphicon glyphicon-edit"></span> Editar'.html_safe, edit_moneda_path(@moneda), class: 'btn btn-success'
    = link_to '<span class="glyphicon glyphicon-arrow-left"></span> Regresar'.html_safe, monedas_path, class: 'btn btn-warning'
